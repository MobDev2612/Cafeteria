<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingTop="65dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.persistent.cafeteria.Fragment.MyMenuFragment">

    <ImageButton
        android:id="@+id/saved_menu_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/saved_menu"
        android:src="@drawable/ic_saved_menus" />

    <ImageButton
        android:id="@+id/personalised_menu_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/personalised_menu"
        android:src="@drawable/ic_personalised_menu" />

</LinearLayout>
