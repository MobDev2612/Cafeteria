<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/black_box"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu_list_item_image"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="@string/food_image"
            android:scaleType="fitStart"
            android:src="@drawable/ic_menu_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right|top"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menu_list_item_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/plus"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plus_sign" />

            <TextView
                android:id="@+id/menu_list_item_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="1"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_medium" />

            <ImageButton
                android:id="@+id/menu_list_item_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/plus"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_minus" />

            <ImageButton
                android:id="@+id/menu_list_item_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/plus"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_heart_unselected" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/menu_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="@string/calorie"
            android:textColor="@color/lighter_gray"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_list_item_calorie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="@string/vendor"
            android:textColor="@color/lighter_gray"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_list_item_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="@string/price"
            android:textColor="@color/lighter_gray"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>